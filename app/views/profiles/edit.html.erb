<div class="form-main">
  <%= form_with model: [@user, @profile], local: true do |f| %> 
<div class="form-info">
<div class="self-info">自己紹介編集</div>
<div class="form-group">
  <label>プロフィール写真</label>
  <%= f.file_field :image, class: "form-control" %> 
</div>
<div class="form-group">
  <label>年齢</label>
  <%= f.select :age, {'19': 19, '20': 20, '21': 21, '22': 22, "23": 24, "25": 25, "26": 26, "27": 27, "28": 28, "29": 29, "30": 30, "31": 31, "32": 32, "33": 33, "34": 34, "35": 35, "36": 36, "37": 38, "39": 39, "40": 40, "非公開": "非公開"}, { include_blank: '選択してください'}, { class: 'form-control' , required: true }%>
</div>
<div class="form-group">
  <label>資格</label>
  <%= f.select :certificaton, {"薬剤師": "薬剤師" , "登録販売者": "登録販売者", "歯科医師": "歯科医師", "歯科衛生士": "歯科衛生士", "栄養士": "栄養士", "その他": "その他"}, { include_blank: '選択してください'}, { class: 'form-control' , required: true }%>
</div>
<div class="form-group">
  <label>性別</label>
  <%= f.select :gender, {"男性": "男性" , "女性": "女性"}, { include_blank: '選択してください'}, { class: 'form-control' , required: true }%>
</div>
<div class="form-group">
  <label>得意分野</label>
  <%= f.text_field :strong, class: "form-control"%> 
</div>
<div class="form-group">
  <label>出身</label>
  <%= f.text_field :birthplace, class: "form-control"%> 
</div> 
<div class="form-group">
  <label>コメント</label>
  <%= f.text_field :text, class: "form-control"%> 
</div>
  <%= f.submit "更新", class: "btn btn-primary"%>
  <% end %> 
</div> 
</div>





