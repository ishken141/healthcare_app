<h2>Sign up</h2>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div> 

  <%= f.fields_for :profile do |f| %>
    <div class="field">
      <%= f.hidden_field :image, :value => " " %>
    </div>
    <div class="field">
      <%= f.hidden_field :age, :value => " " %>
    </div>
    <div class="field">
      <%= f.hidden_field :certificaton, :value => " " %>
    </div>
    <div class="field">
      <%= f.hidden_field :gender, :value => " " %>
    </div>
    <div class="field">
      <%= f.hidden_field :strong, :value => " " %>
    </div>
    <div class="field">
      <%= f.hidden_field :birthplace, :value => " " %>
    </div> 
    <div class="field">
      <%= f.hidden_field :text, :value => " " %>
    </div>
    <div class="field">
      <%= f.hidden_field :user_id, :value => @user.id%>
    </div>
  <% end %> 
  <%= f.fields_for :room do |f| %>
    <div class="field">
    <%= f.hidden_field :box, :value => "相談する" %>
    </div> 
    <% end %>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
